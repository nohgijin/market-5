doctype html
html
  head(lang='ko')
    title 로그인
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='/css/login.css', rel="stylesheet")
    link(href="/image/favicon.ico" rel="shortcut icon")
    meta(name="description" content="배민상회 관리 사이트")
    meta(property="og:title" content="배민상회")
    meta(property="og:site_name" content="배민상회")
    meta(property="og:type" content="website")
    meta(property="og:url" content="")
    meta(property="og:image" content="http://www.woowahan.com/img/mobile/woowabros.jpg")
    meta(property="og:description" content="사장님들 화이팅~! 사장님을 위한 사이트입니다.")
  body
      .big-box
        .hanna
          img(src="image/logo.png", alt="로고" style="margin-left: auto; margin-right: auto; display: block; max-width:40%; max-height:40%")
        .NanumSquareRound
            form(action="/login", method="POST", id="login-form")
              input(type="text" name="id" placeholder="아이디")
              p(style="font-size:12px; color:red;") #{errorID}
              input(type="password" name="password" placeholder="비밀번호")
              p(style="font-size:12px; color:red;") #{errorPass}
              button(id="login-button") 로그인
              .footer
                div.flex-around
                  label.container(style="margin-bottom:0;")
                    | 아이디 저장
                    input(type='checkbox', name="idSave", id="id-save")
                    span.checkmark
                
                  div(style="padding-top:6px;")
                    a 아이디/비번 찾기
                    span |
                    a(href="/register") 회원가입

  script(src="/javascripts/login.js", type="text/javascript")
